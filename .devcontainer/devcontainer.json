{
  "name": "Geekout Vegas 2026 - Landing Page Cloner Workshop",

  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",

  "features": {
    "ghcr.io/anthropics/devcontainer-features/claude-code:1": {}
  },

  "remoteUser": "node",

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "workbench.startupEditor": "none",
        "terminal.integrated.tabs.enabled": true,
        "remote.autoForwardPorts": true,
        "remote.autoForwardPortsSource": "process",
        "workbench.iconTheme": "material-icon-theme"
      },
      "extensions": [
        "esbenp.prettier-vscode",
        "formulahendry.auto-rename-tag",
        "bradlc.vscode-tailwindcss",
        "christian-kohler.path-intellisense",
        "pkief.material-icon-theme"
      ]
    }
  },

  "forwardPorts": [3000, 3001, 4000, 5000, 5173, 8000, 8080],

  "portsAttributes": {
    "3000": {
      "label": "Landing Page Preview",
      "onAutoForward": "openPreview",
      "visibility": "public"
    },
    "3001": {
      "label": "Dev Server",
      "onAutoForward": "notify",
      "visibility": "public"
    },
    "4000": {
      "label": "API",
      "onAutoForward": "notify",
      "visibility": "public"
    },
    "5000": {
      "label": "Backend",
      "onAutoForward": "notify",
      "visibility": "public"
    },
    "5173": {
      "label": "Vite Preview",
      "onAutoForward": "openPreview",
      "visibility": "public"
    },
    "8000": {
      "label": "Python Server",
      "onAutoForward": "notify",
      "visibility": "public"
    },
    "8080": {
      "label": "HTTP Server",
      "onAutoForward": "openPreview",
      "visibility": "public"
    }
  },

  "otherPortsAttributes": {
    "onAutoForward": "notify",
    "visibility": "public"
  },

  "postCreateCommand": "npm install && npx playwright install chromium && npm run prebuild && mkdir -p ~/.claude/plugins/marketplaces && git clone https://github.com/anthropics/claude-code-plugins.git ~/.claude/plugins/marketplaces/claude-code-plugins || true",
  "postStartCommand": "echo 'âœ… Ready! Type claude to start.'"
}
